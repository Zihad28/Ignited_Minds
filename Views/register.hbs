<section class="login-section section-pending">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-6 col-xl-5">
                    <div class="signup-form box">
                        <h3 class="form-title">SignUp Form</h3>
                        <p class="sub-title" style="text-align:center; color: hsl(0%, 0%, 70%); margin-bottom: 20px;">Sign In to your account</p>
                        
                        <form action="/auth/register" method="POST" id="form">
                            <div class="form-group">
                                {{!-- <label for="name">Name</label> --}}
                                <input type="text" id="name" name="name" placeholder="Your Name" required>
                            </div>

                            <div class="form-group">
                                <span id="text" class="text"></span>
                                {{!-- <label for="email">E-mail Address</label> --}}
                                <input type="text" id="email" name="email" placeholder="Your E-Mail Address" oninput = "validation()" required>
                            </div>

                            <div class="form-group">
                                {{!-- <label for="password">Password</label> --}}
                                <input type="password" class="password" placeholder="Password" name="password">
                            </div>

                            <div class="form-group">
                                <span id="text1" class="text1"></span>
                                {{!-- <label for="c_password">Confirm Password</label> --}}
                                <input type="password" class="confirmpassword" name="c_password" placeholder="Confirm Password" oninput="passfunction()" required>
                            </div>

                            <button type="submit" class="btn btn-theme btn-block">Sign Up</button>
                            <p class="text-center mt-4 mb-0">Already have an account ?&nbsp;<a href="/login">Login</a></p>
                            <div class="message">
                              {{#if message }}
                                 <h5 class="alert alert-danger mt-4"> {{ message }} </h5>
                              {{/if }}
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</section>

